# Plik: backend/.env

# workspace
WORKSPACE=/workspace

# PostgreSQL (dane z docker-compose.yml)
POSTGRES_HOST=pilot_postgres
POSTGRES_USER=pilot
POSTGRES_PASSWORD=pilot
POSTGRES_DB=pilotdb
DATABASE_URL=postgresql+psycopg2://pilot:pilot@pilot_postgres:5432/pilotdb

# Redis / Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# URL do Selenium (dla workerów)
SELENIUM_URL=http://selenium:4444/wd/hub

# Ustawienia Aplikacji
DEFAULT_CURRENCY=PLN
MULTIPLIER=1.5
CACHE_TTL_DAYS=30

# Opcjonalne API Allegro
ALLEGRO_API_KEY=
ALLEGRO_USE_API=False

# --- DANE SMARTPROXY (KROK 28) ---
# Format: http://UZYTKOWNIK:HASLO@SERWER:PORT
# Upewnij się, że URL jest czysty
PROXY_URL=http://eu.smartproxy.net:3120

# Upewnij się, że USERNAME tu jest (nowe dane)
PROXY_USERNAME=

# Upewnij się, że PASSWORD jest PUSTE
PROXY_PASSWORD=